#!/usr/bin/env node

var colors = require('colors')
  , tox = require('../lib/tox')
  , argv = require('optimist').argv
  , action = argv._[0];

/**
 * Show usage
 */
  
function usage () {
  console.log([
    'usage: tox [options] [action]',
    '',
    'options:',
    '  -h                 Print this and exit',
    '',
    'actions:',
    '  create             Create a new project'
  ].join('\n'));
}

if (argv.h || argv.help || action === undefined) {
  usage();
  process.exit();
} else {
  if (tox.actions[action]) {
    tox.actions[action]();
  } else {
    console.log('%s not found', action);
  }
}
